<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_women"
    tools:context="com.rodico.duke0808.rodicobarcodescannerv20.WomenActivity">

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="ШТРИХ-КОД" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCAN"
        android:id="@+id/scanButton"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/editText2"
        android:layout_toEndOf="@+id/editText2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ЦІНА, грн"
        android:id="@+id/textView"
        android:textSize="35dp"
        android:layout_below="@+id/scanButton"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="КІЛЬКІСТЬ"
        android:id="@+id/textView2"
        android:textSize="32dp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:layout_alignBottom="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:textSize="32dp" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText4"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:textSize="32dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="115dp"
        android:text="ПРОДАЖ"
        android:id="@+id/saleButton"
        android:textSize="35dp"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/getButton"
        android:layout_alignStart="@+id/getButton" />

    <Button
        android:layout_width="140dp"
        android:layout_height="115dp"
        android:text="Повернення"
        android:id="@+id/returnButton"
        android:layout_alignTop="@+id/saleButton"
        android:layout_toRightOf="@+id/saleButton"
        android:layout_toEndOf="@+id/saleButton" />

    <Button
        android:layout_width="200dp"
        android:layout_height="85dp"
        android:text="Прийом Товару"
        android:id="@+id/getButton"
        android:layout_below="@+id/saleButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="140dp"
        android:layout_height="85dp"
        android:text="Списання"
        android:id="@+id/outButton"
        android:layout_alignTop="@+id/getButton"
        android:layout_alignLeft="@+id/returnButton"
        android:layout_alignStart="@+id/returnButton" />

</RelativeLayout>
