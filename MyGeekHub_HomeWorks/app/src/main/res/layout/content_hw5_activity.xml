<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_hw5_activity"
    tools:context="com.rodico.duke0808.mygeekhub_homeworks.HomeWorks.HomeWork5.Hw5_activity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Animation"
        android:id="@+id/start_anim_bt"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/button_color"
        android:layout_margin="2dp"
        android:elevation="5dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop Animation"
        android:id="@+id/stop_anim_bt"
        android:layout_below="@+id/start_anim_bt"
        android:layout_centerHorizontal="true"
        android:background="@color/button_color"
        android:layout_margin="2dp"
        android:elevation="1dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bounce"
        android:id="@+id/bounce_tv"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Scale"
        android:id="@+id/scale_tv"
        android:layout_below="@+id/bounce_tv"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rotate"
        android:id="@+id/rotate_tv"
        android:layout_below="@+id/scale_tv"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Fade IN OUT"
        android:id="@+id/fade_in_tv"
        android:layout_above="@+id/bounce_tv"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp" />
</RelativeLayout>
